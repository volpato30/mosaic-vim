execute pathogen#infect()
syntax on
set encoding=utf-8
filetype plugin indent on

set foldmethod=indent
set foldlevel=99

set tabstop=8
set expandtab
set shiftwidth=4
set softtabstop=4
set background=dark

nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>
nnoremap <space> za
